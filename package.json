{
    "name": "babel-base-template",
    "version": "0.0.1",
    "main": "src/index.js",
    "license": "MIT",
    "dependencies": {
        "debug": "^3.0.1"
    },
    "devDependencies": {
        "chai": "^4.1.1",
        "eslint": "^4.5.0",
        "eslint-config-standard": "^10.2.1",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-node": "^5.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-standard": "^3.0.1",
        "mocha": "^4.0.1",
        "webpack": "^3.8.1",
        "webpack-dev-server": "^2.8.1",
        "yarn": "^1.3.2"
    },
    "scripts": {
        "yarn-install": "$(npm bin)/yarn install",
        "yarn-upgrade-latest": "$(npm bin)/yarn upgrade --latest",
        "dev": "$(npm bin)/webpack-dev-server --content-base dist/",
        "build": "$(npm bin)/webpack",
        "lint": "$(npm bin)/eslint src test",
        "start": "echo *START DEVELOPMENT ALIAS*",
        "stop": "echo *STOP DEVELOPMENT ALIAS*",
        "test": "BABEL_DISABLE_CACHE=1 $(npm bin)/mocha test/",
        "test:watch": "BABEL_DISABLE_CACHE=1 $(npm bin)/mocha --watch"
    }
}
